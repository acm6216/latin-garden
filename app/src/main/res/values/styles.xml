<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ToolbarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ToolbarSubtitle" parent="TextAppearance.Material3.ActionBar.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Widget.Latin.Material3.CompoundButton.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_material3</item>
        <item name="thumbTint">@color/switch_thumb_tint_material3_color</item>
        <item name="thumbTintMode">src_in</item>
        <item name="track">@drawable/switch_track_material3</item>
        <item name="trackTint">@color/switch_track_tint_material3_color</item>
    </style>

    <style name="Preference.Latin.Material3.SimpleMenuPreference" parent="Preference.SimpleMenuPreference">
        <item name="android:popupMenuStyle">@style/Widget.Latin.Material3.Preference.SimpleMenuPreference.PopupMenu</item>
    </style>
    <style name="Widget.Latin.Material3.Preference.SimpleMenuPreference.PopupMenu" parent="Widget.Preference.SimpleMenuPreference.PopupMenu">
        <item name="android:popupBackground" tools:ignore="PrivateResource">@drawable/m3_popupmenu_background_overlay</item>
    </style>
</resources>